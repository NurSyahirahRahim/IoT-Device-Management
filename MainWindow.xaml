<Window x:Class="IoT_Device_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IoT_Device_Management"
        mc:Ignorable="d"
        Title="IoT Device Management" Height="350" Width="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Panel for Adding Devices -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtDeviceName" Width="200" Margin="10,0,10,0" 
                     ToolTip="Enter Device Name"/>
            <ComboBox x:Name="cmbDeviceType" Width="150" Margin="0,0,10,0">
                <ComboBoxItem Content="Smart Light"/>
                <ComboBoxItem Content="Security Camera"/>
                <ComboBoxItem Content="Temperature Sensor"/>
                <ComboBoxItem Content="Smart Lock"/>
                <ComboBoxItem Content="Motion Sensor"/>
                <ComboBoxItem Content="Smart Plug"/>
                <ComboBoxItem Content="Smart Voice"/>
            </ComboBox>
            <Button x:Name="btnAddDevice" Width="120" Content="Add Device" Click="ButtonAddDevice_Click"/>
        </StackPanel>


        <!-- Listing -->
        <DataGrid x:Name="DeviceGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" 
                  Margin="10"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Device ID" Binding="{Binding DeviceID}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Name" Binding="{Binding DeviceName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                <DataGridTextColumn Header="Type" Binding="{Binding DeviceType,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="50"/>
                <DataGridTextColumn Header="Last Active" Binding="{Binding LastActive}" Width="*"/>

                <DataGridTemplateColumn Header="Action" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Toggle Status" 
                                    Click="ToggleStatus_Click" 
                                    Tag="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Delete Device Button -->
                <DataGridTemplateColumn Header="" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="DeleteDevice_Click" Tag="{Binding}" 
                            Background="Red" Foreground="White"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Bottom Panel for Save Button-->
        <StackPanel Grid.Row="2" VerticalAlignment="Stretch" Margin="0,0,0,10">
            <Button x:Name="btnSave" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Save Devices" Click="SaveDevices_Click" Margin="0,0,10,0"/>
        </StackPanel>

    </Grid>
</Window>
